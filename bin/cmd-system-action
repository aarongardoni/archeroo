#!/bin/bash

fzf_argrs=(
  --border=sharp
  --border-label="Package Uninstall"
)

options=$(printf "lock\nsuspend\nreboot\nshutdown\n")
CHOICE=$(echo "$options" | fzf "${fzf_args[@]}")

case "$CHOICE" in
  lock)
    swaylock
    ;;
  suspend)
    riverctl spawn 'swaylock -f && systemctl suspend'
    ;;
  shutdown)
    systemctl poweroff
    ;;
  reboot)
    systemctl reboot
    ;;
esac
