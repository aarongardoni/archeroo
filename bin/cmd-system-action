#!/bin/bash

options=$(printf "  Lock\n󰤄  Sleep\n  Hibernate\n  Reboot\n󰚦  Shutdown\n  Capture Area\n󰨤  Record Area")

CHOICE=$(echo "$options" | fuzzel --dmenu)

case "$CHOICE" in
  *"Lock")
    swaylock
    ;;
  *"Sleep")
    riverctl spawn 'swaylock -f && systemctl suspend'
    ;;
  *"Hibernate")
    riverctl spawn 'swaylock -f && systemctl hibernate'
    ;;
  *"Shutdown")
    systemctl poweroff
    ;;
  *"Reboot")
    systemctl reboot
    ;;
  *"Capture Area")
    cmd-screenshot
    ;;
  *"Record Area")
    cmd-screen-record
    ;;
esac
