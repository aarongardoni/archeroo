#!/bin/bash

fzf_argrs=(
  --border=rounded
  --border-label="Package Uninstall"
)

options=$(printf "lock\nsuspend\nreboot\nshutdown\nscreen-record\n")
CHOICE=$(echo "$options" | fzf "${fzf_args[@]}")

case "$CHOICE" in
  lock)
    swaylock
    ;;
  suspend)
    riverctl spawn 'swaylock -f && systemctl suspend'
    ;;
  shutdown)
    systemctl shutdown now
    ;;
  reboot)
    systemctl reboot
    ;;
  screen-record)
    cmd-screen-record && sleep 2
    ;;
esac
